{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "ccyq: Debug with args",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/ccyq.py",
            "args": [
                ".quotes",
                "quotes.yaml"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "ccyq: Debug with stdin",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/ccyq.py",
            "args": [
                ".quotes"
            ],
            "console": "integratedTerminal"
        }
    ]
}